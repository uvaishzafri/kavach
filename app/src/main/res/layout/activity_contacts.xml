<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacts">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="CONTACT ONE"
            tools:ignore="Suspicious0dp"
            android:textColor="#33C4FF"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="CONTACT TWO"
            tools:ignore="Suspicious0dp"
            android:textColor="#33C4FF"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="CONTACT THREE"
            tools:ignore="Suspicious0dp"
            android:textColor="#33C4FF"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="CONTACT FOUR"
            tools:ignore="Suspicious0dp"
            android:textColor="#33C4FF"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="CONTACT FIVE"
            tools:ignore="Suspicious0dp"
            android:textColor="#33C4FF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:layout_weight="1"
            android:textSize="60sp"
            android:gravity="end|fill_vertical|clip_horizontal|bottom"
            android:textColor="#33C4FF"
            android:text="SAVE"
            />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>